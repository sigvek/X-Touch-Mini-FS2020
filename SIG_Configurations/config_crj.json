    {
      "index": 8,
      "event_press": "FLAPS_DECR"
    },
    {
      "index": 9,
      "event_press": { "event": "MobiFlight.ASCRJ_FCP_AP_BTN", "type": "manual", "value": 1 },
      "simvar_led": "AUTOPILOT_MASTER"
    },
    {
      "index": 10,
      "event_press": { "event": "MobiFlight.ASCRJ_FCP_NAV_BTN", "type": "manual", "value": 1 }
