    },
    {
      "trigger_type": "condition-file",
      "simvar": "AUTOPILOT_HEADING_LOCK_DIR",
      "condition": "Functions/Generic/hdg-lock-sync.jinja2"
    },
    {
      "trigger_type": "condition-file",
      "simvar": "GEAR_POSITION",
